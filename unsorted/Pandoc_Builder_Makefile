SRC=$(wildcard *.md)

OS := $(shell uname)

cleanstart:
	make clean
	make all

all: ${SRC:.md=.html}
	cat ${SRC:.md=.html} >index.html

clean:
	rm -f *html

ifeq ($(OS),Darwin)
%.html: %.md
	pandoc -N -f markdown_github -t html -o $@ $<
	echo '<html><head><style type="text/css">p,h1,h2,h3,h4,h5,h6 { font-family: sans-serif; } pre { padding: 5px; margin: 10px; background: beige; overflow: auto; } body { width: 1200px; margin: 0px; padding: 10px; }</style></head><body>' >full_$@
	cat $@ >>full_$@
	sed -i "" 's|\</pre\>|\</pre\>\<input style="position: relative; top: -5px; float: right; " type=button value="Block into Clipboard" onclick="navigator.clipboard.writeText(this.previousSibling.textContent);"/\>|g' full_$@
	cat full_$@ >$@
	rm -f full_$@
else
%.html: %.md
	pandoc -N -f markdown_github -t html -o $@ $<
	echo '<html><head><style type="text/css">p,h1,h2,h3,h4,h5,h6 { font-family: sans-serif; } pre { padding: 5px; margin: 10px; background: beige; overflow: auto; } body { width: 1200px; margin: 0px; padding: 10px; }</style></head><body>' >full_$@
	cat $@ >>full_$@
	sed -i 's|</pre>|</pre><input style="position: relative; top: -5px; float: right; " type=button value="Block into Clipboard" onclick="navigator.clipboard.writeText(this.previousSibling.textContent);"/>|g' full_$@
	cat full_$@ >$@
	rm -f full_$@
endif
